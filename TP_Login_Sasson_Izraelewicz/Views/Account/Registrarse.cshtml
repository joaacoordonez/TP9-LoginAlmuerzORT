<p>REGISTRARSE</p>

<form method= "post" action='@Url.Action("GuardarRegistro","Account")' onsubmit="return VerificarForm()">
    First Name: <br>
    <input type="text" id="nombre" name="nombre" required>
    </br>
    Last Name: <br>
    <input type="text" id="apellido" name="apellido" required>
    </br>
    Email:<br>
    <input type="text" id="mail" name="mail">
    </br>
    Usuario:<br>
    <input type="text" id="usuario" name="usuario"> 
    </br>
    DNI:<br>
    <input type="text" id="dni" name="dni"> 
    </br>
    Contraseña:<br>
    <input type="password" id="contraseña" onKeyUp="VerificarContraseña()" name="contraseña">
    </br>
    <div id="Mas8">Debe contener mas de 8 caracteres</div>
    <div id="Mayusculas">Debe contener al menos 1 mayuscula</div>
    <div id="Especiales">Debe contener al menos 1 caracter especial</div>

    <div id="contraseñaNoValida"></div>
    <input type="submit" name="Registrarse">

    
</form>